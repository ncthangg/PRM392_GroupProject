<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/bg_100dp_no_stroke"
        android:backgroundTint="#DFF2EB"
        android:gravity="center"
        android:padding="9dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnShare"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_100dp_no_stroke"
        android:backgroundTint="#DFF2EB"
        android:padding="7dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toStartOf="@+id/btnFavorite"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <ImageView
        android:id="@+id/btnFavorite"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/bg_100dp_no_stroke"
        android:backgroundTint="#DFF2EB"
        android:padding="7dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="126dp"
        android:background="@drawable/bg_radius_top_46dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFavorite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFavorite">

            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_radius_9dp"
                android:backgroundTint="#B9E5E8"
                android:fontFamily="@font/unbounded_light"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="Electric Repair"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/unbounded_regular"
                android:text="Washing Machine Repair"
                android:textColor="#000000"
                android:textSize="24sp" />

            <!-- Book Appointment -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/unbounded_regular"
                android:text="BOOK APPOINTMENT"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/unbounded_regular"
                android:text="Day"
                android:textColor="#000000"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_25dp"
                android:backgroundTint="#B4E4E4"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:text="Chọn ngày" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/unbounded_regular"
                android:text="Time"
                android:textColor="#000000"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnSelectTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_25dp"
                android:backgroundTint="#B4E4E4"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:text="Chọn giờ" />

            <!-- Note Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Note To Service Provider"
                android:textSize="13sp"
                android:fontFamily="@font/unbounded_regular"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:gravity="start"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_radius_15dp"
                android:backgroundTint="#B9E5E8"
                android:hint="Enter here"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/unbounded_light"
                android:paddingHorizontal="16dp" />

            <TextView
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="30sp"
                android:background="@drawable/bg_radius_15dp"
                android:text="Continue"
                android:paddingVertical="8dp"
                android:textSize="13sp"
                android:gravity="center"
                android:fontFamily="@font/unbounded_medium"
                android:textAllCaps="false"
                android:textColor="#DFF2EB" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>