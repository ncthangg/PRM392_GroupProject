<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/categoryback"
    android:layout_margin="8dp">

    <!-- Hình ảnh dịch vụ -->
    <ImageView
        android:id="@+id/tvServiceImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_icon"/>

    <!-- Thông tin dịch vụ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <!-- Danh mục dịch vụ -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electric Repair"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/text_background"
            android:padding="4dp"/>

        <!-- Tên dịch vụ -->
        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fridge Repair"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Tên người thợ -->
        <TextView
            android:id="@+id/tvWorkerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worker Name"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <!-- Giá tiền -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200.000 VND"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>
