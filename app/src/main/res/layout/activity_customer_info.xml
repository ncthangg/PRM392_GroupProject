<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_customer_info"
    android:orientation="vertical"
    tools:context=".CustomerInfoActivity">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_100dp_no_stroke"
        android:backgroundTint="#4A628A"
        android:gravity="center"
        android:padding="9dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#DFF2EB" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Title texts -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unbounded_regular"
                android:gravity="center"
                android:text="Book Service"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unbounded_regular"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="Customer Information"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingHorizontal="19dp">

                <!-- Name field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/unbounded_regular"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/bg_radius_15dp"
                    android:backgroundTint="#DFF2EB"
                    android:fontFamily="@font/unbounded_light"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text="Lê Ngà Lê"

                    android:textColor="#000000"
                    android:textSize="14sp" />

                <!-- Email field -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/unbounded_regular"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/bg_radius_15dp"
                    android:backgroundTint="#DFF2EB"
                    android:fontFamily="@font/unbounded_light"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text="Example@gmail.com"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <!-- Gender field -->

                <!-- Phone Number field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/unbounded_regular"
                    android:text="Phone Number"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etPhoneNumber"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/bg_radius_15dp"
                    android:backgroundTint="#DFF2EB"
                    android:fontFamily="@font/unbounded_light"
                    android:inputType="phone"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text=""
                    android:hint="Số điện thoại liên lạc"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/unbounded_regular"
                    android:text="Location"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etLocation"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/bg_radius_15dp"
                    android:backgroundTint="#DFF2EB"
                    android:fontFamily="@font/unbounded_light"
                    android:inputType="text"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:hint="Địa chỉ chi tiết"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <!-- Continue button -->

                <TextView
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_radius_15dp"
                    android:fontFamily="@font/unbounded_medium"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="#DFF2EB"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>